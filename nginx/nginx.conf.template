server {
    listen ${NGINX_INTERNAL_PORT};

    server_name _;

    location / {
        proxy_pass http://server:${SRV_PORT};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /media/ {
        alias /app/media/;
        autoindex on;
        expires 30d;
    }
}
